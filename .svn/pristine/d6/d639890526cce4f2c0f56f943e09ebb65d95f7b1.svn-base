/*TOOLBAR THEME*/
.topnav {
	background-color: #333;
	overflow: hidden;
	position: fixed; 
	top: 0; 
  	width: 100%;
	padding: 15px 15px;
	padding-left: 30%;
	
}


.topnav-a {
	position: relative;
	margin-left: 50px;
	float: left;
	display: block;
	color: #f2f2f2;
	text-align: center;
	padding: 10px 10px 10px 10px;
	text-decoration: none;
	border: 1px solid;
}

.topnav-a-username {
	z-index: 999999;
	position: fixed;
	margin-left: 3%;
	margin-top: -35px;
	display: block;
	color: #f2f2f2;
	text-align: center;
	padding: 10px 10px 10px 10px;
	text-decoration: none;
}

